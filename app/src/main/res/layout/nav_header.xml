<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/gradient_header"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/perfil_foto"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/perfil_foto"
         />

        <TextView
        android:id="@+id/nome_textView"
        android:layout_width="wrap_content"

        android:layout_height="30dp"

        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:textColor="#fff"
        android:text="Gimo Mhula"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25sp"

        app:layout_constraintStart_toEndOf="@+id/perfil_foto"
        app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="3"
        >


    <TextView
        android:layout_weight="1"
        android:id="@+id/perfil_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Perfil"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="#fff"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150.00MT"
            android:textColor="#fff"

            android:layout_gravity="end"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="55dp"
            android:layout_weight="2"
            android:textSize="20dp"

            />


    </LinearLayout>

</LinearLayout>